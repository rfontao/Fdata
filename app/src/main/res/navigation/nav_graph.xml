<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/FirstFragment">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.rica91935.fdata.QueryFragment"
            android:label="@string/first_fragment_label"
            tools:layout="@layout/query">


        <action
                android:id="@+id/action_FirstFragment_to_SecondFragment"
                app:destination="@id/SecondFragment"/>
    </fragment>
    <fragment
            android:id="@+id/SecondFragment"
            android:name="com.rica91935.fdata.RaceListFragment"
            android:label="@string/second_fragment_label"
            tools:layout="@layout/race_list">

        <argument
                android:name="queryURL"
                app:argType="string"
                android:defaultValue="" />

        <action
                android:id="@+id/action_SecondFragment_to_FirstFragment"
                app:destination="@id/FirstFragment"/>

        <action
                android:id="@+id/action_SecondFragment_to_RaceFragment"
                app:destination="@id/RaceFragment"/>
    </fragment>

    <fragment
            android:id="@+id/RaceFragment"
            android:name="com.rica91935.fdata.RaceInfoFragment"
            android:label="RaceFragment"
            tools:layout="@layout/race_info">

        <argument
                android:name="race"
                app:argType="com.rica91935.fdata.data.Race"/>

    </fragment>
</navigation>